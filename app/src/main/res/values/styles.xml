<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Float_Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Float_Dialog_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/float_dialog_enter_anim</item>
        <item name="@android:windowExitAnimation">@anim/float_dialog_exit_anim</item>
    </style>

    <style name="Title_TextView_style">
        <item name="android:textSize">@dimen/child_title_size </item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tab_icon">
        <item name="android:textSize">@dimen/text_size_smaller</item>
            <item name="android:textColor">@color/rediobutton_color</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bg_color</item>
        <item name="android:padding">5.0dip</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="BlueButton">
        <item name="android:textSize">@dimen/sp14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_blue_bn</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40.0dip</item>
    </style>
</resources>
