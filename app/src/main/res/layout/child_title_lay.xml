<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/child_title_lay_layout"
                android:layout_width="fill_parent"
                android:layout_height="56dip">

    <!-- 标题布局 -->

    <TextView
        android:id="@+id/child_title_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@mipmap/title_back"
        android:drawablePadding="12dip"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxWidth="@dimen/dip249"
        android:paddingLeft="12dip"
        android:paddingRight="0dip"
        android:singleLine="true"
        android:text="@string/app_name"
        style="@style/Title_TextView_style" />


    <View
        android:id="@+id/child_title_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#cecece"/>

    <TextView
        android:id="@+id/child_title_download_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标题"
        android:layout_centerVertical="true"
        style="@style/Title_TextView_style"
        android:layout_centerHorizontal="true"/>


    <!-- 右边部分 -->

    <RelativeLayout
        android:id="@+id/child_title_right_lay"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true" >

        <TextView
            android:id="@+id/title_right_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="右边标题"
            android:layout_margin="@dimen/dip15"
            style="@style/Title_TextView_style"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <View
        android:id="@+id/child_title_line"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#cecece" />

</RelativeLayout>