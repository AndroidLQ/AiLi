<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_main"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffd8d8d8" />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@mipmap/dialog_tip_icon"
        android:drawablePadding="5dip"
        android:paddingBottom="20dp"
        android:paddingLeft="28.6dip"
        android:paddingRight="28.6dip"
        android:paddingTop="28.3dp"
        android:text="温馨提示"
        android:textColor="#343434"
        android:textSize="16dip" />

    <LinearLayout
        android:id="@+id/center_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/message_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="8dp"
            android:paddingBottom="15dp"
            android:paddingLeft="28.6dip"
            android:paddingRight="28.6dip"
            android:text="文字\n测试"
            android:textColor="#333333"
            android:textSize="16.67dip" />
    </LinearLayout>

    <View
        android:id="@+id/bottom_bar_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ffd5d5d5"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="53.3dip"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:id="@+id/btn_1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="#8d8d8d"
            android:textSize="17.3dip"
            android:visibility="gone" >

            <requestFocus />
        </TextView>

        <View
            android:id="@+id/btn_devide"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#ffd5d5d5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="#1bbc9b"
            android:textSize="17.3dip"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>